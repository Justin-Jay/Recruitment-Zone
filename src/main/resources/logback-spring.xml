<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_ROOT" value="~/RecruitmentZoneApplication/ApplicationFiles/ApplicationLogs" />
    <property name="LOG_FILE_NAME" value="RecruitmentZone" />
    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern> %d{ISO8601} ${LOG_LEVEL_PATTERN:-%5p} ${PID:- } --- [%8.15t] %-40.40logger{39} : %X{REQUEST_ID} %msg%n${LOG_EXCEPTION_CONVERSION_WORD:-%throwable}</Pattern>
        </layout>
    </appender>

    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern> %d{ISO8601} ${LOG_LEVEL_PATTERN:-%5p} ${PID:- } --- [%8.15t] %-40.40logger{39} : %X{REQUEST_ID} %msg%n${LOG_EXCEPTION_CONVERSION_WORD:-%throwable}</Pattern>
        </layout>
    </appender>

    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_ROOT}/${LOG_FILE_NAME}.log</file>
        <encoder>
            <pattern> %d{ISO8601} ${LOG_LEVEL_PATTERN:-%5p} ${PID:- } --- [%8.15t] %-40.40logger{39} : %X{REQUEST_ID} %msg%n${LOG_EXCEPTION_CONVERSION_WORD:-%throwable}</pattern>
        </encoder>

        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily and when the file reaches 10 MegaBytes -->
            <fileNamePattern>RecruitmentZoneApplication/Archived/RecruitmentZone-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>5MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>



    <root level="DEBUG">
        <appender-ref ref="RollingFile" />
        <appender-ref ref="Console" />
    </root>


    <logger name="za.co.recruitmentzone" level="trace" additivity="false">
        <appender-ref ref="RollingFile" />
        <appender-ref ref="Console" />
    </logger>

    <!--ELASTIC LOGGING?-->
    <logger name="tracer" level="trace"/>

</configuration>
